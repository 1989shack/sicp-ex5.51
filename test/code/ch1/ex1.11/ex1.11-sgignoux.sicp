(define (f-recursive n)
  (if (< n 3)
      n
      (+ (f-recursive (- n 1))
         (* 2 (f-recursive (- n 2)))
         (* 3 (f-recursive (- n 3))))))

(define (f-iterative n)
  (define (f-loop n-1 n-2 n-3 nth)
    (if (= n nth)
        n-1
        (f-loop (+ n-1 (* 2 n-2) (* 3 n-3)) n-1 n-2 (+ 1 nth))))
  (if (< n 3)
      n
      (f-loop 2 1 0 2)))

(define fibr f-recursive)
(define fibi f-iterative)

(fibr 0)
(fibr 3)
(fibr 4)
(fibr 6)
(fibr 12)

(fibi 0)
(fibi 3)
(fibi 4)
(fibi 6)
(fibi 12)
