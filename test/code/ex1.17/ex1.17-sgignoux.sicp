(define (double x)
    (* x 2))

(define (halve x)
    (/ x 2))

(define (fast-mult a b)
  (cond ((= b 0)
         0)
        ((even? b)
         (fast-mult (double a) (halve b)))
        (else
         (+ a (fast-mult a (- b 1))))))

(define *-Olog fast-mult)

(*-Olog 0 1)
(*-Olog 1 0)
(*-Olog 2 2)
(*-Olog 5 11)
(*-Olog 17 19)
